<head>
  <meta charset="UTF-8">
  <title>{{meta.tenantName}} Web Style Guide</title>

  <link rel="stylesheet" href="css/guide.min.css">

  <!--[if lt IE 9]>
    <script src="guide-js/html5shiv.min.js"></script>
  <![endif]-->

  {{#if meta.fontMyriad}}
    <script type="text/javascript" src="//fonts.walmart.com/fqp0lia.js"></script>
    <script type="text/javascript">try{Typekit.load();}catch(e){}</script>
  {{/if}}

  {{#if meta.fontLato}}
    <link href='http://fonts.googleapis.com/css?family=Lato:300,400,700,900' rel='stylesheet' type='text/css'>
  {{/if}}

  <script type="text/javascript">
    window.grunticon=function(e){if(e&&3===e.length){var t=window,n=!(!t.document.createElementNS
        ||!t.document.createElementNS("http://www.w3.org/2000/svg","svg").createSVGRect
