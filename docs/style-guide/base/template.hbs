</head>

<body>
  <div class="guide-slider-wrapper">
    <header class="guide-header guide-slider">
      <div class="container container-responsive clearfix">
        <button class="guide-nav-toggle js-nav-toggle pull-left">
          <i class="wmicon wmicon-menu"></i>
          <span class="visuallyhidden">Menu</span>
        </button>

        <h1 class="guide-logo pull-left">{{meta.tenantName}} Web Style Guide</h1>
      </div>
    </header>
  </div>

  <nav class="guide-nav">
    <button class="guide-nav-close js-nav-toggle">Close</button>

    <ul class="block-list guide-nav-list">
      {{#each sections}}
        <li class="guide-nav-item">
          <a href="#{{reference}}-{{slug header}}">
            <span class="guide-nav-item-reference">{{reference}}</span>
            {{header}}
          </a>

          {{#if children}}
            <ul class="guide-subnav-list">
              {{#each children}}
                <li class="guide-subnav-item">
                  <a href="#{{reference}}-{{slug header}}">
                    <span class="guide-subnav-item-reference">{{reference}}</span>
                    {{header}}
                  </a>

                  {{#if children}}
                    <ul>
                      {{#each children}}
                        <li class="guide-subnav-item">
                          <a href="#{{reference}}-{{slug header}}">
                            <span class="guide-subnav-item-reference">{{reference}}</span>
                            {{header}}
                          </a>
                        </li>
                      {{/each}}
                    </ul>
                  {{/if}}
                </li>
              {{/each}}
            </ul>
          {{/if}}
        </li>
      {{/each}}
    </ul>
  </nav>

  <div class="guide-slider-wrapper">
    <main class="guide-content guide-slider">
      <div class="container container-responsive module">
        {{#each sections}}

          <h2 class="guide-heading">
            <span class="guide-anchor" id="{{reference}}-{{slug header}}"></span>
            <span class="guide-heading-reference">{{reference}}</span> {{header}}
            <a href="#{{reference}}-{{slug header}}">#</a>
          </h2>

          {{{description}}}

          {{#each children}}
            {{>section}}

            {{#each children}}
              {{>section}}
            {{/each}}
          {{/each}}
        {{/each}}
      </div>
    </main>
  </div>

<script src="js/lib/requirejs/require.js"></script>
<script src="guide-bundle.js"></script>
<script>
  require(["guide-js/guide"], function (guide) {
    guide.init();
  });
</script>
</body>
</html>
